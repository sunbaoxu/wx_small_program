/* pages/sale/sale.wxss */
/* 楼盘布局样式  */
@import "../../components/page/loupan/sale/sale.wxss";
/* 加载更多  */
@import "/components/page/loading/loading.wxss";
.wrap{
  padding-top:80rpx;
}
.header{
  display: flex;
  width: 100%;
  height: 80rpx;
  box-shadow: 0 3rpx 3rpx 1rpx #eee;
  font-size: 28rpx;
  position: fixed;
  top:0;
  background: #fff;
  left:0;
  z-index: 100;
}
.header .all{
  height: 100%;
  width: 124rpx;
}
.header .nav_box{
  width: 0;
  height: 100%;
  flex:1;
  overflow: hidden;
}
.header .nav_box .nav{
  overflow-x: auto;
  white-space:nowrap;
  height: 100rpx;
}
.header .nav_box .nav::-webkit-scrollbar {display:none}
.header .nav .a{
  display: inline-block;
  height: 79rpx;
  line-height: 79rpx;
  padding:0  18rpx;
}
.header .on{
  color:#f63;
  border-bottom: 1px solid #f63;
}
/* 主题部分  */
.main .nav-box{
  padding:30rpx 20rpx;
  box-sizing: border-box;
}
.main .nav-box .nav{
  width: 100%;
  display: flex;
  height: 72rpx;
}
.main .nav-box .nav .a{
  height: 100%;
  width: 0;
  flex: 1;
  color:#f63;
  font-size: 28rpx;
  border:1px solid #f63;
}
.main .nav-box .nav .a-left{
  border-right: 0;
  border-radius: 8rpx 0 0 8rpx;
}
.main .nav-box .nav .a-right{
  border-left: 0;
  border-radius: 0 8rpx 8rpx 0;
}
.main .nav-box .nav .a-on{
  background: #f63;
  color:#fff;
}