@import "/components/page/loading/loading.wxss";
.hidden{
  display: none;
}
.dl{
  padding-top:30rpx;
}
.dl:first-child{
  padding-top:0;
}
.dl .dt{
  width: 100%;
  height: 550rpx;
}
.dl .dd{
  padding: 15rpx 20rpx;
}
.dd .header{
  margin-bottom: 10rpx;
}
.dd .header .name{
  font-size: 32rpx;
  color:#333;
  margin-right: 10rpx;
}
.dd .header .status{
  font-size: 20rpx;
  color: #F37021;
  border: 1px solid #F37021;
  border-radius: 29px;
  padding: 0 10rpx;
  line-height: 32rpx;
}
.dd .header1{
  font-size:28rpx;
  color: #666;
  margin-bottom: 30rpx;
}
.dd .header1 .mianji{
  margin:0 15rpx;
}
.dd .body{
  margin-bottom: 20rpx;
  padding:0 20rpx;
  box-sizing: border-box;
}
.dd .body .desc{
  color: #999999;
  line-height:44rpx;
  font-size: 28rpx;
}