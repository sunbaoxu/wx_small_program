/* pages/album/album.wxss */
page{
  display: block;
  width:100%;
  height: 100%;
  background: #000;
}
.wrap{
  height: 100%;
  width: 100%;
  padding:100rpx 0;
  box-sizing: border-box;
}
.wrap .body{
  flex: 1;
  width: 100%;
  display: flex;
  align-items: center;
}
.wrap .body .sw-wrap{
  width: 100%;
  height: 558rpx;
}
.sw-wrap .sw-list{
  width: 100%;
}
.sw-wrap .sw-list .img{
  width: 100%;
  height: 100%;
  background-size: cover;
}
.wrap .footer{
  padding:0 36rpx;
}
.wrap .footer text{
  float:left;
  width:30%;
  color:#fff;
  border:1px solid #fff;
  height: 60rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 60rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}
.wrap .footer .cont{
  margin:0 33rpx;
}
.wrap .footer .on{
  border:1px solid #f63;
  background: #f63;
}